                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.204"/>
                    <TranslateTransform X="0.001" Y="-0.231"/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
